    <%= f.label t('.street2_html') %>
    <%= f.text_field :street_2 %>
  </p>
  <p>
    <%= f.label t('.city_html') %>
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label t('.state_html') %>
    <%= f.text_field :state %>
  </p>
  <p>
    <%= f.label t('.postcode_html') %> 
    <%= f.text_field :post_code %>
  </p>

  <p>
    <%= f.label t('.parent_id_html') %>
    <%= collection_select(:location, :parent_id, Location.all, :id, :name, {:include_blank => '---'}) %>
  </p>
